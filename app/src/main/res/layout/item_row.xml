<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    android:padding="10dp">


    <ImageView
        android:id="@+id/image_item"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/description_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_item"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image_item"
        android:text="Description:" />

    <TextView
        android:id="@+id/price_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_edit_text"
        android:layout_alignLeft="@id/description_edit_text"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/image_item"
        android:text="Price:" />

    <TextView
        android:id="@+id/to_switch_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_edit_text"
        android:layout_alignLeft="@id/description_edit_text"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/image_item"
        android:text="ToSwitch:" />

    <ImageView
        android:id="@+id/chat_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/chat" />



    <View
        android:id="@+id/seperator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="#BABABA" />


</RelativeLayout>