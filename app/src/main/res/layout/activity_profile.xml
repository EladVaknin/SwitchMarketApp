<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackish_blue"
    android:backgroundTint="@color/blackish_blue">

    <ImageView
        android:id="@+id/ProfileimageView"
        android:layout_width="280dp"
        android:layout_height="210dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="8dp"
        android:background="@color/blackish_blue"
        app:layout_constraintBottom_toTopOf="@+id/ProfileUserNAmeTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/ProfileUserNAmeTextView"
        android:layout_width="111dp"
        android:layout_height="0dp"
        android:layout_marginBottom="7dp"
        android:text="UserName"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/ProfileratingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfileimageView" />

    <RatingBar
        android:id="@+id/ProfileratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toTopOf="@+id/ProfileTextViewEmail"
        app:layout_constraintStart_toStartOf="@+id/ProfileimageView"
        app:layout_constraintTop_toBottomOf="@+id/ProfileUserNAmeTextView" />

    <TextView
        android:id="@+id/ProfileTextViewEmail"
        android:layout_width="141dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:lineSpacingExtra="14sp"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ProfileTextViewPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfileratingBar" />

    <TextView
        android:id="@+id/ProfileTextViewPhone"
        android:layout_width="141dp"
        android:layout_height="0dp"
        android:layout_marginBottom="239dp"
        android:text="Phone"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfileTextViewEmail" />
</androidx.constraintlayout.widget.ConstraintLayout>