    <TextView
        android:id="@+id/ProfileUserNAmeTextView"
        android:layout_width="111dp"
        android:layout_height="0dp"
        android:layout_marginBottom="7dp"
        android:text="UserName"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/ProfileratingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RatingBar
        android:id="@+id/ProfileratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491" />

    <TextView
        android:id="@+id/ProfileTextViewEmail"
        android:layout_width="136dp"
        android:layout_height="51dp"
        android:layout_marginBottom="8dp"
        android:lineSpacingExtra="14sp"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ProfileTextViewPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfileratingBar" />

    <TextView
        android:id="@+id/ProfileTextViewPhone"
        android:layout_width="141dp"
        android:layout_height="0dp"
        android:layout_marginBottom="232dp"
        android:text="Phone"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/blackish_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/blackish_blue"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-86dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/ProfileimageView"
            android:layout_width="223dp"
            android:layout_height="220dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="98dp"
            android:background="@drawable/profile"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="101dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>